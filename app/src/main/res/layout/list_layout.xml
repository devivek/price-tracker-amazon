<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/ListColor">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/ItemName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/RemoveOneProduct"
                android:layout_toEndOf="@id/RemoveOneProduct" />
            <TextView
                android:id="@+id/textViewOriginalPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/original_price"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/RemoveOneProduct"
                android:layout_toEndOf="@id/RemoveOneProduct" />

            <TextView
                android:id="@+id/textViewOriginalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textViewOriginalPriceText"
                android:text="@string/original_price"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/textViewOriginalPriceText" />

            <TextView
                android:id="@+id/textViewNewPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewOriginalPrice"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/current_price"
                android:layout_marginStart="5dp"

                android:layout_toRightOf="@id/RemoveOneProduct"
                android:layout_toEndOf="@id/RemoveOneProduct" />

            <TextView
                android:id="@+id/textViewNewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewOriginalPrice"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textViewNewPriceText"
                android:text="@string/new_price"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/textViewNewPriceText" />

            <ImageView
                app:tint="#e53935"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_round_remove_circle_24"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/RemoveOneProduct"
                android:scaleType="center"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>